{
  "name": "melange-project",
  "dependencies": {
    "ocaml": "4.14.0",
    "@opam/dune": ">= 3.5.0",
    "@opam/ocamlfind": "1.9.5",
    "@opam/reason": "*",
    "@opam/melange": "*",
    "@opam/mel": "*"
  },
  "devDependencies": {
    "@opam/dot-merlin-reader": "*",
    "@opam/ocaml-lsp-server": ">= 1.12.0"
  },
  "esy": {
    "buildsInSource": "unsafe",
    "build": [
      "rm -rf node_modules/melange",
      "ln -sfn #{@opam/melange.lib}/melange/mel_runtime node_modules/melange",
      "mel build -- --display=short --root=."
    ]
  },
  "scripts": {
    "build:watch": "mel build -w"
  },
  "installConfig": {
    "pnp": false
  }
}
